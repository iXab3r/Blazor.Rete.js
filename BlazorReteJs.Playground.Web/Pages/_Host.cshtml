@page "/index"
@using BlazorReteJs.Playground
@using Microsoft.AspNetCore.Components.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8"/>
    <title>Blazor Rete.js playground (web)</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <base href="~/" />
    <link href="_content/BlazorReteJs.Playground/css/bootstrap/bootstrap.min.css" rel="stylesheet"/>
    <link href="_content/BlazorReteJs.Playground/css/app.css" rel="stylesheet"/>
    <link rel="icon" type="image/png" href="_content/BlazorReteJs.Playground/favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>

<body>

<app>
    @(await Html.RenderComponentAsync<App>(RenderMode.Server))
</app>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script src="_framework/blazor.server.js"></script>
</body>
</html>